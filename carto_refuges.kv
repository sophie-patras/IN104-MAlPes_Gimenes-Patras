<CartoRefuges>:
    #Grenoble 
    lat: 45.1666700
    lon: 5.7166700
    zoom: 10
    on_zoom: 
        self.zoom = 10 if self.zoom >10 else self.zoom #cree un zoom max
    on_lat:
        self.debut_cairn_dans_champ() # appelle la fonction des que lat change
    on_lon:
        self.debut_cairn_dans_champ()
    ClignoteGps: 
        lat: root.lat #2 lignes a supprimer une fois que le gps marchera 
        lon: root.lon 
        id: clignotant 
