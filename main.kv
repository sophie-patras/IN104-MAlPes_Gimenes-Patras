#:kivy 1.0.9
#: include carto_refuges.kv
#: import NavigationLayout kivymd.uix.navigationdrawer.NavigationLayout
#: import MDSeparator kivymd.uix.card.MDSeparator
#: import MDCard kivymd.uix.card.MDCard 


<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)
    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color


<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "2dp"
    AnchorLayout:
        orientation: "vertical"
        anchor_x:"left"
        size_hint_y: 0.4
        height: avatar.height
        Image:
            id: avatar 
            size_hint:1,1
            size: "300dp", "250dp"
            source:"alpes.png"
    MDLabel:
        text: "Menu MAlPes"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]
    MDLabel:
        text:"une application de Sophie Patras et Lucille Gimenes"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        DrawerList:
            id: md_list
            ItemDrawer:
                text: "Informations"
                icon: "help"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "info"
            ItemDrawer:
                text: "Navigation GPS"
                icon: "navigation"
            ItemDrawer: 
                text: "Plan"
                icon: "map"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "plan"
            ItemDrawer: 
                text: "Relief"
                icon: "image"
            ItemDrawer:
                text: "Velo"
                icon: "bike"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "velo" 
            ItemDrawer:
                text: "Enregistrements"
                icon: "bookmark"
                on_press:
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "enregistrements"
            ItemDrawer:
                text: "Historique"
                icon: "history"
                on_press: 
                    root.nav_drawer.set_state("close")
                    root.screen_manager.current = "historique" 
 
Screen:
    NavigationLayout:
        ScreenManager:
            id: screen_manager
            Screen:
                name: "plan"
                BoxLayout:
                    orientation: 'vertical'
                    MDToolbar:
                        right_action_items: [['magnify',lambda x: app.menu_recherche.open()]] #bouton recherche
                        md_bg_color:  [1,1,0,0.9]
                        left_action_items:[['menu',lambda x: nav_drawer.set_state()]] #bouton menu 
                    CartoRefuges:
                        id: cairn 
            Screen:
                name: "info" 
                BoxLayout:
                    orientation: 'vertical'
                    MDToolbar:
                        md_bg_color:  [1,1,0,0.9]
                        left_action_items:[['menu',lambda x: nav_drawer.set_state()]] #bouton menu
                    MDCard:    
                        orientation: 'vertical'
                        size_hint_y: 0.3
                        size_hint_x: 0.5
                        pos_hint: {'x':.25, 'y':.8}
                        elevation: 12
                        padding: "30dp"
                        spacing: "2dp"
                            
                        Image: 
                            source: "marmotte.png"
                            size_hint_y: 0.7
                            size: "300dp","250dp"
                        MDLabel:
                            orientation: 'vertical'
                            text: "MAlPes is an application created by Sophie Patras and Lucille Gimenes for the IN104 course" 
                            font_style: "Button"
                            halign: 'center'
                            size_hint_y: 0.15
                        MDLabel:
                            orientation: 'vertical'
                            text: "This app enables all hikers, from beginners to confirmed, to find great moutain refuges in the Alpes. Refuges are displayed on the map, you just have to click on the icon to have all matching information"
                            font_style: "Caption"
                            halign: 'center'
                            size_hint_y: 0.15


            Screen: 
                name: "historique"
                BoxLayout:
                    orientation: 'vertical'
                    id: histo
                    MDToolbar:
                        md_bg_color:  [1,1,0,0.9]
                        left_action_items:[['menu',lambda x: nav_drawer.set_state()]] #bouton menu
            Screen: 
                name: "velo"
                BoxLayout:
                    orientation: 'vertical'
                    MDToolbar:
                        md_bg_color:  [1,1,0,0.9]
                        left_action_items:[['menu',lambda x: nav_drawer.set_state()]] #bouton menu
            Screen: 
                name: "enregistrements"
                BoxLayout:
                    orientation: 'vertical'
                    MDToolbar:
                        md_bg_color:  [1,1,0,0.9]
                        left_action_items:[['menu',lambda x: nav_drawer.set_state()]] #bouton menu


        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer: 
                id: content_drawer 
                screen_manager: screen_manager
                nav_drawer: nav_drawer 